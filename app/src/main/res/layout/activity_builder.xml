                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/builder_activity_CPU_socket_type_text_view"
                        app:layout_constraintTop_toBottomOf="@+id/builder_activity_CPU_socket_type_text_view" />

                    <TextView
