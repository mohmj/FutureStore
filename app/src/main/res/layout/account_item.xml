<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/profile_activity_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/account_item_image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cpu" />

        <TextView
            android:id="@+id/account_item_game_name_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/Default_font_color_dark"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/account_item_price_text_view"
            app:layout_constraintStart_toEndOf="@+id/account_item_image_view"
            app:layout_constraintTop_toTopOf="@+id/account_item_image_view" />

        <TextView
            android:id="@+id/account_item_price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="1500 SR"
            android:textColor="@color/Default_font_color_dark"
            app:layout_constraintBottom_toBottomOf="@+id/account_item_image_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/account_item_game_name_text_view" />

        <TextView
            android:id="@+id/account_item_descripe_text_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="TextView"
            android:textColor="@color/Default_font_color_dark"
            app:layout_constraintBottom_toBottomOf="@+id/account_item_image_view"
            app:layout_constraintEnd_toStartOf="@+id/account_item_price_text_view"
            app:layout_constraintStart_toEndOf="@+id/account_item_image_view"
            app:layout_constraintTop_toBottomOf="@+id/account_item_game_name_text_view" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>