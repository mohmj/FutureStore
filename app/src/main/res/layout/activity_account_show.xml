<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountShowActivity">

    <ImageView
        android:id="@+id/account_show_activity_image_view"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/default_line_light" />

    <TextView
        android:id="@+id/account_show_activity_game_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/Default_font_color_dark"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_show_activity_image_view" />

    <TextView
        android:id="@+id/account_show_activity_price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/Default_font_color_dark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/account_show_activity_game_name_text_view"
        app:layout_constraintTop_toBottomOf="@+id/account_show_activity_game_name_text_view" />

    <TextView
        android:id="@+id/account_show_activity_descripe_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textColor="@color/Default_font_color_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_show_activity_price_text_view" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/product_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_show_activity_descripe_text_view">

        <ImageView
            android:id="@+id/account_show_activity_call_image_view"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icons8_call_240px" />

        <TextView
            android:id="@+id/account_show_activity_phone_number_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TextView"
            android:textColor="@color/Default_font_color_dark"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/account_show_activity_call_image_view"
            app:layout_constraintStart_toEndOf="@+id/account_show_activity_whatsup_image_view"
            app:layout_constraintTop_toTopOf="@+id/account_show_activity_call_image_view" />

        <ImageView
            android:id="@+id/account_show_activity_whatsup_image_view"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/account_show_activity_call_image_view"
            app:layout_constraintStart_toEndOf="@+id/account_show_activity_call_image_view"
            app:layout_constraintTop_toTopOf="@+id/account_show_activity_call_image_view"
            app:srcCompat="@drawable/icons8_whatsapp_240px" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>